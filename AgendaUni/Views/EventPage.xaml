<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.EventPage"
             Title="">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Registrar Evento"
            FontSize="24"
            HorizontalOptions="Center" />

        <VerticalStackLayout>
            <Label Text="Aula"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Picker Title="Selecione a Aula"
                ItemsSource="{Binding Classes}"
                ItemDisplayBinding="{Binding ClassName}"
                SelectedItem="{Binding SelectedClass}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Descrição do Evento"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Entry Placeholder="Digite a descrição do evento"
               Text="{Binding NewEvent.Description}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Data do Evento"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <DatePicker Date="{Binding NewEvent.EventDate}" Format="dd/MM/yyyy" />
        </VerticalStackLayout>

        <Button Text="Registrar"
                Command="{Binding RegisterEventCommand}" />
    </VerticalStackLayout>
</ContentPage>