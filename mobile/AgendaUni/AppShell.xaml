<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgendaUni.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AgendaUni.Views"
    Title="AgendaUni">

    <FlyoutItem Title="Principal">
        <Tab>
            <ShellContent
                Title="Calendário"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />

            <ShellContent
                Title="Matérias"
                ContentTemplate="{DataTemplate local:ClassListPage}" />

            <ShellContent
                Title="Faltas"
                ContentTemplate="{DataTemplate local:AbsencePage}" />

            <ShellContent
                Title="Eventos"
                ContentTemplate="{DataTemplate local:EventPage}" />
        </Tab>
    </FlyoutItem>

    <ShellContent
        Title="Configurações"
        ContentTemplate="{DataTemplate local:SettingsPage}" />

</Shell>
