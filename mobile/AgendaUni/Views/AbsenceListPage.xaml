<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.AbsenceListPage"
             xmlns:viewModels="clr-namespace:AgendaUni.ViewModels"
             Title="Faltas">
    <Grid RowDefinitions="*,Auto">
        <ListView ItemsSource="{Binding Absences}"
                  SelectedItem="{Binding SelectedAbsence, Mode=TwoWay}"
                  RowHeight="60">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding AbsenceReason}" FontSize="18" />
                            <Label Text="{Binding AbsenceDate, StringFormat='{0:dd/MM/yyyy}'}" FontSize="14" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="1" Text="Adicionar Falta" Command="{Binding AddAbsenceCommand}" Margin="10" />
    </Grid>
</ContentPage>