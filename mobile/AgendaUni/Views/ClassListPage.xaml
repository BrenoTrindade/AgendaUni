<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.ClassListPage"
             xmlns:viewModels="clr-namespace:AgendaUni.ViewModels"
             Title="Aulas">
    <Grid RowDefinitions="*,Auto">
        <ListView ItemsSource="{Binding Classes}"
                  SelectedItem="{Binding SelectedClass, Mode=TwoWay}"
                  RowHeight="60">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding ClassName}" FontSize="18" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="1" Text="Adicionar Aula" Command="{Binding AddClassCommand}" Margin="10" />
    </Grid>
</ContentPage>