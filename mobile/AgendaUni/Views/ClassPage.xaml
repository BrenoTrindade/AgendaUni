<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.ClassPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="15">

        <VerticalStackLayout>
            <Label Text="Nome"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Entry Placeholder="Digite o nome da aula"
               Text="{Binding CurrentClass.ClassName}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="MÃ¡ximo de Faltas"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Entry Placeholder="Ex: 3"
               Keyboard="Numeric"
               IsTextPredictionEnabled="False"
               IsSpellCheckEnabled="False"
               Text="{Binding CurrentClass.MaximumAbsences}" />
        </VerticalStackLayout>

        <Button Text="Salvar"
                    Command="{Binding SaveClassCommand}" />

        <Button Text="Excluir"
                Command="{Binding DeleteClassCommand}"
                BackgroundColor="DarkRed"
                TextColor="White"
                Margin="0,10,0,0" />

    </VerticalStackLayout>
</ContentPage>
