<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.ClassScheduleListPage"
             xmlns:viewModels="clr-namespace:AgendaUni.ViewModels"
             Title="Horários">
    <Grid RowDefinitions="*,Auto">
        <ListView ItemsSource="{Binding ClassSchedules}"
                  SelectedItem="{Binding SelectedClassSchedule, Mode=TwoWay}"
                  RowHeight="60">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding DayOfWeek}" FontSize="18" />
                            <Label Text="{Binding ClassTime, StringFormat='{0:HH:mm}'}" FontSize="14" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="1" Text="Adicionar Horário" Command="{Binding AddClassScheduleCommand}" Margin="10" />
    </Grid>
</ContentPage>