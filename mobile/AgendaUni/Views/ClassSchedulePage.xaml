<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.ClassSchedulePage"
             Title="{Binding Title}">
    
    <VerticalStackLayout Padding="20" Spacing="15">

        <VerticalStackLayout>
            <Label Text="Aula"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Picker Title="Selecione a Aula"
                ItemsSource="{Binding Classes}"
                ItemDisplayBinding="{Binding ClassName}"
                SelectedItem="{Binding SelectedClass}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="HorÃ¡rio" 
           FontAttributes="Bold"
           FontSize="14"
           Margin="0,5,0,2"/>
            
        <TimePicker Format="HH:mm"
                    Time="{Binding CurrentClassSchedule.ClassTime}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Dias da Semana"
                   FontAttributes="Bold"
                   FontSize="14"
                   Margin="0,5,0,2" />
            <FlexLayout BindableLayout.ItemsSource="{Binding SelectableDays}"
                        Wrap="Wrap"
                        JustifyContent="Center">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Name}"
                                Command="{Binding ToggleSelectionCommand}"
                                Margin="5"
                                WidthRequest="100">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                             Binding="{Binding IsSelected}"
                                             Value="True">
                                    <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                    <Setter Property="TextColor" Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="Button"
                                             Binding="{Binding IsSelected}"
                                             Value="False">
                                    <Setter Property="BackgroundColor" Value="LightGray" />
                                    <Setter Property="TextColor" Value="Black" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </VerticalStackLayout>

        <Button Text="Salvar"
                    Command="{Binding SaveClassScheduleCommand}" />

        <Button Text="Excluir"
                Command="{Binding DeleteClassScheduleCommand}"
                BackgroundColor="DarkRed"
                TextColor="White"
                Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>