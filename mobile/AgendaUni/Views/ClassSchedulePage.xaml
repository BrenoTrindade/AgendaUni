<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.ClassSchedulePage"
             Title="{Binding Title}">
    
    <VerticalStackLayout Padding="20" Spacing="15">

        <VerticalStackLayout>
            <Label Text="Aula"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Picker Title="Selecione a Aula"
                ItemsSource="{Binding Classes}"
                ItemDisplayBinding="{Binding ClassName}"
                SelectedItem="{Binding SelectedClass}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Dia da Semana"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Picker Title="Selecione o dia da semana"
                    ItemsSource="{Binding DaysOfWeek}"
                    SelectedItem="{Binding CurrentClassSchedule.DayOfWeek}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="HorÃ¡rio" 
           FontAttributes="Bold"
           FontSize="14"
           Margin="0,5,0,2"/>
            
        <TimePicker Format="HH:mm"
                    Time="{Binding CurrentClassSchedule.ClassTime}" />
        </VerticalStackLayout>

        <Button Text="Salvar"
                    Command="{Binding SaveClassScheduleCommand}" />

        <Button Text="Excluir"
                Command="{Binding DeleteClassScheduleCommand}"
                BackgroundColor="DarkRed"
                TextColor="White"
                Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>