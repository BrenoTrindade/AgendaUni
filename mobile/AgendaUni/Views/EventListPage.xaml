<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.EventListPage"
             xmlns:viewModels="clr-namespace:AgendaUni.ViewModels"
             Title="Eventos">
    <Grid RowDefinitions="*,Auto">
        <ListView ItemsSource="{Binding Events}"
                  SelectedItem="{Binding SelectedEvent, Mode=TwoWay}"
                  RowHeight="60">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Description}" FontSize="18" />
                            <Label Text="{Binding EventDate, StringFormat='{0:dd/MM/yyyy}'}" FontSize="14" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="1" Text="Adicionar Evento" Command="{Binding AddEventCommand}" Margin="10" />
    </Grid>
</ContentPage>