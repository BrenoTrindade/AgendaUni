<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaUni.Views.EventPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20" Spacing="15">

        <VerticalStackLayout>
            <Label Text="Aula"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Picker Title="Selecione a Aula"
                ItemsSource="{Binding Classes}"
                ItemDisplayBinding="{Binding ClassName}"
                SelectedItem="{Binding SelectedClass}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Descrição do Evento"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <Entry Placeholder="Digite a descrição do evento"
               Text="{Binding CurrentEvent.Description}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Data do Evento"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,5,0,2" />
            <DatePicker Date="{Binding CurrentEvent.EventDate}" Format="dd/MM/yyyy" />
        </VerticalStackLayout>

        <Button Text="Salvar"
                Command="{Binding SaveEventCommand}" />

        <Button Text="Excluir"
                Command="{Binding DeleteEventCommand}"
                BackgroundColor="DarkRed"
                TextColor="White"
                Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>