@page "/class-details"
@page "/class-details/{id}"
@using AgendaUni.Web.Models
@using AgendaUni.Web.Services
@inject ClassService ClassService
@inject NavigationManager NavigationManager

<PageTitle>Editar Aula</PageTitle>

<h3>@Title Class</h3>

<EditForm Model="@classItem" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="className">Class Name:</label>
        <InputText id="className" class="form-control" @bind-Value="@classItem.ClassName" />
    </div>
    <div class="form-group">
        <label for="maximumAbsences">Maximum Absences:</label>
        <InputNumber id="maximumAbsences" class="form-control" @bind-Value="@classItem.MaximumAbsences" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }

    private Class classItem = new Class();
    private string Title = "Create";

    protected override async Task OnInitializedAsync() {
        if (Id != 0) {
            Title = "Edit";
            classItem = await ClassService.GetClassById(Id);
        }
    }

    private async Task HandleSubmit() {
        if (Id != 0) {
            await ClassService.UpdateClass(classItem);
        } else {
            await ClassService.AddClass(classItem);
        }
        NavigationManager.NavigateTo("/classes");
    }

    private void Cancel() {
        NavigationManager.NavigateTo("/classes");
    }
}