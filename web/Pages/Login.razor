@page "/login"
@inject AgendaUni.Web.Services.AuthService AuthService
@inject NavigationManager NavigationManager
@using System.ComponentModel.DataAnnotations
@using AgendaUni.Web.Models
@using System.Web

<PageTitle>AgendaUni</PageTitle>

<div class="login-container">
    <div class="login-card">
        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="username">Usu√°rio:</label>
                <InputText id="username" class="form-control" @bind-Value="@loginModel.Username" />
            </div>

            <div class="form-group">
                <label for="password">Senha:</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="@loginModel.Password" />
            </div>

            <button type="submit" class="btn btn-primary">Entrar</button>
        </EditForm>
    </div>
</div>

@code {
    private LoginModel loginModel = new LoginModel();

    private async Task HandleLogin()
    {
        try
        {
            var success = await AuthService.Login(loginModel);
            if (success)
            {
                var returnUrl = NavigationManager.ToAbsoluteUri(NavigationManager.Uri).Query;
                if (returnUrl.Contains("returnUrl="))
                {
                    returnUrl = System.Web.HttpUtility.ParseQueryString(returnUrl).Get("returnUrl");
                    NavigationManager.NavigateTo(returnUrl);
                }
                else
                {
                    NavigationManager.NavigateTo("/");
                }
            }
            else
            {
                // Handle login failure (e.g., display error message)
                Console.WriteLine("Login failed");
            }
        }
        catch (Exception ee)
        {
            
            throw;
        }
    }
}